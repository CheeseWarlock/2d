{
  "compilerOptions": {
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["es6", "dom", "es2019"],
    "rootDir": "src",
    "module": "es2022",
    "moduleResolution": "bundler",
    "target": "es2022",
    "types": ["vite/client", "vite-plugin-glsl/ext", "@types/jest"]
  },
  "include": ["./src"],
  "exclude": [
    "**/*.test.ts",
    "./dist/**/*",
    "./coverage/**/*",
    "jest.config.cjs"
  ]
}
