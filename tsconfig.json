{
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es6",
      "dom",
      "es2019"
    ],
    "rootDir": "src",
    "module": "es2022",
    "moduleResolution": "bundler",
    "target": "es2022",
    "types": [
      "vite-plugin-glsl/ext"
    ]
  },
  "include": ["./src"],
  "exclude": ["**/*.test.ts", "./dist/**/*", "./coverage/**/*", "jest.config.cjs"]
}
